方法一：指针-指针
#include<stdio.h>
int my_strlen(const char* s)
{
	char *p=(char*)s;
	while (*s != '\0')
	{
		s++;
	}
	return s-p;
}
int main()
{
	char s[] = "I love C" ;
	printf("%d",my_strlen(s));
	return 0;
}
方法二：计数器
#include<stdio.h>
int my_strlen(const char* s)
{
	int count = 0;
	while (*s != '\0')
	{
		count++;
		s++;
	}
	return count;
}
int main()
{
	char s[] = "I love C" ;
	printf("%d",my_strlen(s));
    return 0；
}
方法三：递归实现：
#include<stdio.h>
int my_strlen(const char* s)
{
	if (*s == '\0')
	{
		return 0;
	}
	else
	{
		return 1 + my_strlen(s + 1);
	}
}
int main()
{
	char s[] = "I love C";
	printf("%d",my_strlen(s));
}
//strcpy函数的模拟实现
#include<stdio.h>
#include<assert.h>
char* my_strcpy(char* dst, const char* src)
{
	char* ret=dst;
	assert(dst != NULL && src != NULL);
	/*while (*dst++ = *src++)
		;
	return ret;*/
	while (*src != '\0')
	{
		*dst++ = *src++;
	}
	*dst = '\0';
	return ret;
}
int main()
{
	char s1[] = "I love C";
	char s2[50] = { 0 };
	char* ret=my_strcpy(s2, s1);
	printf("%s", ret);
}
//strcat函数的模拟实现
#include<stdio.h>
#include<assert.h>
char* my_strcat( char* s1, const char* s2)
{
	assert(s1 && s2 != NULL);
	char* ret = s1;
	while (*s1!='\0')
		s1++;
	while ((*s1++ = *s2++))
		;
	return ret;
}
int main()
{
	char s1[100] =  "I love C " ;
	char s2[] = "and I am learning C";
	printf("%s",my_strcat(s1, s2));
	return 0;
}
//strcmp函数模拟实现
#include<stdio.h>
int my_strcmp(char* s1, char* s2)
{
	while (*s1 && *s2)
	{
		if (*s1 != *s2)
		{
			return *s1 - *s2;
		}
	}
}
	int main()
	{
			char s1[100] =  "I love C " ;
			char s2[] = "and I am learning C";
			int ret = my_strcmp(s1, s2);
			if (ret < 0)
			{
					printf("%s is less than %s\n", s1, s2);
			}
			else if (ret > 0)
			{
					printf("%s is greater than %s\n", s1, s2);
			}
			else
			{
				printf("%s is equal to %s\n", s1, s2);
			}
			return 0;
	}
//strstr函数的模拟实现
#include<stdio.h>
char* my_strstr(const char* s1, const char* s2)
{
	if (!s1 || !s2)
	{
		return NULL;
	}
	char* p1=NULL;
	char* p2=NULL;
	char* curr = s1;
	while (*curr)
	{
		p1 = curr;
		p2 = s2;
		while (*p1 && *p2 && (*p1 == *p2))
		{
			p1++;
			p2++;
		}
		if (*p2 == '\0')
		{
			return curr;
		}
		curr++;
	}
	return NULL;

}
int main()
{
	char s1[] = "hello world";
	char s2[] = "world";
	printf("%s",my_strstr(s1, s2));
	return 0;
}
//strncop模拟实现
#include<stdio.h>
char* my_strncpy(char* dest, const char* src, size_t num)
{
	char* ret = dest;
	while (num--)
	{
		*dest++ = *src++;
		if ((*src||*dest) == '\0')
			break;
	}
	return ret;
}
int main()
{
	char s1[] = "hello world";
	char s2[] = "********";
	printf("%s", my_strncpy(s2, s1, 5));
}
//strncat模拟实现
#include<stdio.h>
#include<assert.h>
char* my_strncat( char* s1, const char* s2,size_t num)
{
	assert(s1 && s2 != NULL);
	char* ret = s1;
	while (*s1!='\0')
		s1++;
	while (s1&&s2&&num--)
		*s1++ = *s2++;
	return ret;
}
int main()
{
	char s1[100] =  "I love C " ;
	char s2[] = "and I am learning C";
	printf("%s",my_strncat(s1, s2,18));
	return 0;
}
