练习使用库函数，qsort排序各种类型的数据
整型：
#include<stdio.h>
int int_cmp(const void* a, const void* b)
{
	return *(int*)a - *(int*)b;
}
int main()
{
	int arr[] = { 1,2,3,5,7,4,3,10 };
	int sz = sizeof(arr) / sizeof(arr[0]);
	qsort(arr, sz, sizeof(int), int_cmp);
	for (int i = 0;i < sz;i++)
	{
		printf("%d ", arr[i]);
	}
	return 0;
}
//结构体类型
#include<stdio.h>
#include<string.h>
struct stu
{
	char name[20];
	int age;
}s;
//比较函数，利用年龄进行比较
int cmp_age(const void* a, const void* b)
{
	return ((struct stu*)a)->age - ((struct stu*)b)->age;
}
//比较函数，利用姓名进行比较
int cmp_name(const void* a, const void* b)
{
	return strcmp(((struct stu*)a)->name, ((struct stu*)b)->name);
}
int main()
{
	struct stu s[] = { {"zhangsan", 20}, {"lisi", 30}, {"wangwu", 15} };
	int sz = sizeof(s) / sizeof(s[0]);
	qsort(s, sz, sizeof(struct stu), cmp_age);
	//sqort(s, sz, sizeof(struct stu), cmp_name);
	for (int i = 0;i < sz;i++)
	{
		printf("%s %d\n", s[i].name, s[i].age);
	}
	return 0;
}
模仿qsort的功能实现一个通用的冒泡排序
#include<stdio.h>
int int_cmp(const void* p1, const void* p2)
{
	return (*(int*)p1 - *(int*)p2);
}
void swap(void* p1, void* p2, int size)
{
	int i = 0;
	for (i = 0; i < size; i++)
	{
		char tmp = *((char*)p1 + i);
		*((char*)p1 + i) = *((char*)p2 + i);
		*((char*)p2 + i) = tmp;
	}
}
void bubble_qsort(int* arr, int sz, size_t size, int(*cmp)(const void*, const void*))
{
	for (int i = 0;i < sz - 1;i++)
	{
		for (int j = 0;j < sz - i - 1;j++)
		{
			if (cmp((char*)arr + j * size, (char*)arr + (j + 1) * size) > 0)
			{
				swap((char*)arr + j * size, (char*)arr + (j + 1) * size, size);
			}
		}
	}
}
int main()
{
	int arr[] = { 2,3,5,1,6,7,8,9,6,10 };
	int sz = sizeof(arr) / sizeof(arr[0]);
	bubble_qsort(arr, sz, sizeof(int), int_cmp);
	for (int i = 0;i < sz;i++)
	{
		printf("%d ", arr[i]);
	}
}

